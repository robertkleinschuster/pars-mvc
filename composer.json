{
    "name": "pars/pars-mvc",
    "description": "",
    "license": "BSD-3-Clause",
    "keywords": [
        "pars"
    ],
    "support": {
        "docs": "https://docs.parsphp.org/pars-mvc/",
        "issues": "https://github.com/pars/pars-mvc/issues",
        "source": "https://github.com/pars/pars-mvc",
        "rss": "https://github.com/pars/pars-mvc/releases.atom",
        "forum": "https://discourse.parsphp.org/"
    },
    "require": {
        "php": "^7.4",
        "pars/pars-core": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Pars\\Mvc\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParsTest\\Mvc\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laminas": {
            "module": "Pars\\Mvc"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
